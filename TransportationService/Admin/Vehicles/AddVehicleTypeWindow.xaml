<Window x:Class="TransportationService.AddVehicleTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransportationService"
        mc:Ignorable="d"
        Title="Add vehicle type" Height="300" Width="300"
        Background="#223266" WindowStyle="ToolWindow">
    <StackPanel Margin="20" VerticalAlignment="Stretch">
        <Label Content="Add new vehicle type" HorizontalAlignment="Center" FontSize="25" Foreground="AliceBlue"/>
        <Separator></Separator>
        <Label Content="Name" Foreground="AliceBlue"/>
        <TextBox Name="nameTextBox" FontSize="18" Foreground="AliceBlue" Background="Transparent"/>
        <Label Content="Max load" Foreground="AliceBlue"/>
        <TextBox Name="loadTextBox" FontSize="18" PreviewTextInput="NumberValidation" Background="Transparent" Foreground="AliceBlue"/>
        <Button Name="submitBtn" IsDefault="true" Content="Submit" Margin="0 30 0 0 " Click="submitBtn_Click" Height="30" Width="200"/>
    </StackPanel>
</Window>
