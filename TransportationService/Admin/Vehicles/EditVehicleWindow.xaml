<Window x:Class="TransportationService.EditVehicleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransportationService"
        mc:Ignorable="d"
        Title="Edit vehicle informations" Height="450" Width="300" Loaded="Window_Loaded">
    <StackPanel Margin="20" VerticalAlignment="Stretch">
        <Label Content="Edit vehicle" HorizontalAlignment="Center" FontSize="25"/>
        <Separator></Separator>
        <Label Content="Make"/>
        <TextBox Name="makeTextBox" FontSize="18"/>
        <Label Content="Model"/>
        <TextBox Name="modelTextBox" FontSize="18"/>
        <Label Content="Registration"/>
        <TextBox Name="registrationTextBox" FontSize="18"/>
        <Label Content="Fuel consumption"/>
        <TextBox Name="fuelTextBox" FontSize="18"/>
        <Label Content="Vehicle type"/>
        <ComboBox Name="vehicleTypeComboBox" HorizontalAlignment="Stretch"/>
        <Button Name="submitBtn" IsDefault="true" Content="Submit" Margin="20 10" Click="submitBtn_Click" Height="30" Width="200"/>
    </StackPanel>
</Window>
