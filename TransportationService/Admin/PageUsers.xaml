<Page x:Class="TransportationService.Admin.PageUsers"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TransportationService"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ap_userPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <DataGrid Grid.ColumnSpan="3" Grid.Row="0" Name="dataGrid" />
        <Button Grid.Column="0" Grid.Row="1" Name ="AddUser" Content="Add user" Height="39" Width="136" Click="AddUser_Click"/>
        <Button Grid.Column="1" Grid.Row="1" Name ="AddVehicle" Content="Add vehicle" Height="39" Width="136" Click="AddVehicle_Click"/>
        <Button Grid.Column="2" Grid.Row="1" Name ="AddVehicleType" Content="Add vehicle type"  Height="39" Width="136" Click="AddVehicleType_Click"/>
    </Grid>
</Page>
