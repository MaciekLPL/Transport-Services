<Window x:Class="TransportationService.EditDriverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransportationService"
        mc:Ignorable="d"
        Title="Edit driver information" Height="420" Width="300" Loaded="Window_Loaded">
    <StackPanel Margin="20" VerticalAlignment="Stretch">
        <Label Content="Edit driver" HorizontalAlignment="Center" FontSize="25"/>
        <Separator></Separator>
        <Label Content="Name"/>
        <TextBox Name="nameTextBox" FontSize="18"/>
        <Label Content="Surname"/>
        <TextBox Name="surnameTextBox" FontSize="18"/>
        <Label Content="Age"/>
        <TextBox Name="ageTextBox" FontSize="18"/>
        <Label Content="Hourly rate"/>
        <TextBox Name="hourlyRateTextBox" FontSize="18"/>
        <Button Name="submitBtn" IsDefault="true" Content="Submit" Margin="60 20" Click="submitBtn_Click"/>
    </StackPanel>
</Window>
