<Window x:Class="TransportationService.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransportationService"
        mc:Ignorable="d"
        Title="Sign in" Height="260" Width="323">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <Label Content="Sign in" HorizontalAlignment="Center" FontSize="25"/>
        <Separator></Separator>
        <Label Content="Username"/>
        <TextBox Name="unameTextBox" FontSize="18"/>
        <Label Content="Password"/>
        <PasswordBox Name="passwdTextBox" FontSize="18"/>
        <Button Name="submitBtn" IsDefault="true" Content="Submit" Margin="60 10" Click="submitBtn_Click"/>
    </StackPanel>
</Window>
