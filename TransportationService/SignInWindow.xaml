<Window x:Class="TransportationService.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransportationService"
        mc:Ignorable="d"
        Title="Sign in" Height="280.321" Width="265.007"
        Background="#223266"
        WindowStyle="None" AllowsTransparency="True">
    <StackPanel Margin="20,29,20,20" VerticalAlignment="Center" Height="254">
        <Label Content="Sign in" HorizontalAlignment="Center" FontSize="25" Foreground="AliceBlue"/>
        <Separator></Separator>
        <Label Content="Username" Foreground="AliceBlue" Margin="10,0,0,0"/>
        <TextBox Name="unameTextBox" FontSize="18" Background="#223266" Foreground="AliceBlue" Margin="10,0"/>
        <Label Content="Password" Foreground="AliceBlue" Margin="10,0,0,0"/>
        <PasswordBox Name="passwdTextBox" FontSize="18" Background="#223266" Foreground="AliceBlue" Margin="10,0"/>
        <Button x:Name="submitBtn" IsDefault="true" Content="Submit" Margin="77,20,67,20" Click="submitBtn_Click" Height="26"/>
        <Button Content="Quit" Margin="77,0,67,0" Height="26" Click="Button_Click"/>
    </StackPanel>
</Window>
